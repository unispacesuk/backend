{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    //    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "sourceRoot": "./App",
    "baseUrl": "./App",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@Requests": ["./Core/Routing"],
      "@Decorators": ["./Core/Decorators"],
      "@Services/*": ["./Services/*"],
      "@Models": ["./Models"],
      "@Interfaces": ["./Interfaces"]
    }
  },
  "exclude": ["node_modules", "dist/**/*", "Test"],
  "include": ["App/index.ts"]
}
